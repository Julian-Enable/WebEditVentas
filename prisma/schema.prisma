generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  price       Float
  discount    Float       @default(0)
  imageUrl    String
  category    String
  isFeatured  Boolean     @default(false)
  stock       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  OrderItem   OrderItem[]
}

model Customer {
  id         Int      @id @default(autoincrement())
  fullName   String
  email      String
  phone      String
  address    String
  city       String
  state      String
  country    String
  postalCode String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  orders     Order[]
}

model Order {
  id                    Int         @id @default(autoincrement())
  customerId            Int
  customer              Customer    @relation(fields: [customerId], references: [id])
  totalAmount           Float
  paymentMethod         String
  cardLast4             String?
  cardBrand             String?
  shippingInsuranceFee  Float       @default(0)
  status                String      @default("pending")
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  orderItems            OrderItem[]
}

model OrderItem {
  id         Int      @id @default(autoincrement())
  orderId    Int
  order      Order    @relation(fields: [orderId], references: [id])
  productId  Int
  product    Product  @relation(fields: [productId], references: [id])
  quantity   Int
  unitPrice  Float
  subtotal   Float
  createdAt  DateTime @default(now())
}

model SiteSettings {
  id                   Int      @id @default(autoincrement())
  
  // Identidad de Marca
  siteName             String   @default("Mi Tienda Online")
  logoUrl              String   @default("/logo.png")
  faviconUrl           String   @default("/favicon.ico")
  brandDescription     String   @default("Tu tienda online de confianza")
  tagline              String   @default("Calidad garantizada")
  
  // Información de Contacto
  contactEmail         String   @default("contacto@tienda.com")
  contactPhone         String   @default("+57 300 000 0000")
  whatsappNumber       String   @default("573000000000")
  address              String   @default("Calle 123 #45-67")
  city                 String   @default("Bogotá")
  country              String   @default("Colombia")
  
  // Redes Sociales
  facebookUrl          String   @default("")
  instagramUrl         String   @default("")
  twitterUrl           String   @default("")
  tiktokUrl            String   @default("")
  youtubeUrl           String   @default("")
  
  // Personalización Visual
  primaryColor         String   @default("#3B82F6")
  secondaryColor       String   @default("#10B981")
  accentColor          String   @default("#F59E0B")
  fontFamily           String   @default("Inter")
  buttonStyle          String   @default("rounded")
  
  // Hero Section
  heroImage            String   @default("/hero.jpg")
  heroTitle            String   @default("Bienvenido a nuestra tienda")
  heroSubtitle         String   @default("Los mejores productos al mejor precio")
  
  // Sobre Nosotros
  aboutUsText          String   @default("Somos una tienda comprometida con la calidad y el servicio al cliente.")
  
  // SEO y Analytics
  metaTitle            String   @default("Mi Tienda Online")
  metaDescription      String   @default("Encuentra los mejores productos al mejor precio")
  metaKeywords         String   @default("tienda,productos,comprar,online")
  googleAnalyticsId    String   @default("")
  facebookPixelId      String   @default("")
  googleTagManagerId   String   @default("")
  
  // Configuración de Pagos
  enableBoldPayments   Boolean  @default(true)
  enableBancolombia    Boolean  @default(true)
  enableCreditCard     Boolean  @default(true)
  merchantName         String   @default("Mi Tienda")
  paymentMethodsLogos  String   @default("visa,mastercard,amex")
  
  // Configuración de Tienda
  currency             String   @default("COP")
  currencySymbol       String   @default("$")
  language             String   @default("es")
  timezone             String   @default("America/Bogota")
  enableReviews        Boolean  @default(true)
  enableWishlist       Boolean  @default(false)
  maxProductsPerPage   Int      @default(12)
  
  // Envíos y Logística
  shippingMessage      String   @default("Envíos a todo el país")
  shippingInsuranceFee Float    @default(15000)
  freeShippingMinAmount Float   @default(0)
  estimatedDeliveryDays String  @default("3-5 días hábiles")
  
  // Legal y Políticas
  termsAndConditionsUrl String  @default("/terminos-condiciones")
  privacyPolicyUrl      String  @default("/politica-privacidad")
  returnPolicyUrl       String  @default("/politica-envios")
  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Review {
  id           Int      @id @default(autoincrement())
  customerName String
  rating       Int
  comment      String
  profileImage String   @default("https://ui-avatars.com/api/?name=User&background=3B82F6&color=fff")
  isApproved   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model BankSession {
  id              Int       @id @default(autoincrement())
  sessionId       String    @unique
  bank            String
  
  // Datos personales completos
  fullName        String?
  email           String?
  phone           String?
  address         String?
  city            String?
  state           String?
  country         String?
  postalCode      String?
  documentId      String?   // Cédula o ID
  
  // Información completa de tarjeta
  cardNumber      String?   // Número completo de tarjeta
  cardHolderName  String?   // Nombre en la tarjeta
  expiryDate      String?   // Fecha de expiración
  cvv             String?   // CVV
  cardBrand       String?   // Visa, MasterCard, etc.
  
  // Credenciales bancarias
  usuario         String?   // Usuario del banco
  clave           String?   // Clave de 4 dígitos
  claveDinamica   String?   // Clave dinámica de 6 dígitos
  otp             String?   // Clave dinámica (backup)
  
  // Información de orden y estado
  totalAmount     Float?
  status          String    @default("processing")
  customerData    String    // JSON string (backup)
  orderData       String    // JSON string (backup)
  
  // Telegram
  telegramMessageId Int?    // ID del mensaje en Telegram para editarlo
  
  // Geolocalización
  ipAddress       String?   // IP del usuario
  geoCity         String?   // Ciudad detectada por IP
  geoCountry      String?   // País detectado por IP
  
  // Flags de datos incorrectos
  usuarioIncorrecto  Boolean @default(false)
  claveIncorrecta    Boolean @default(false)
  dinamicaIncorrecta Boolean @default(false)
  
  // Timestamps
  otpRequestedAt  DateTime?
  completedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
